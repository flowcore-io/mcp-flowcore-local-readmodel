{
  "name": "@flowcore/local-read-model-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for creating a local Read Model and feeding it with events from the Flowcore Platform",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "local-read-model-mcp-server": "./dist/index.js"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && bun run copy-files && bun build ./src/index.ts --outdir ./dist --target node && bun run add-shebang",
    "copy-files": "bun run scripts/copy-files.ts",
    "add-shebang": "bun run scripts/add-shebang.ts",
    "prepublishOnly": "bun run build",
    "inspect": "bunx @modelcontextprotocol/inspector bun src/index.ts",
    "lint": "biome lint",
    "format": "biome format"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "rimraf": "^6.0.1",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@flowcore/data-pump": "^0.3.4",
    "@flowcore/sdk": "^1.19.1",
    "@flowcore/sdk-oidc-client": "^1.3.1",
    "@flowcore/time-uuid": "^0.2.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "aws-sdk": "^2.1692.0",
    "dayjs": "^1.11.13",
    "duckdb": "^1.2.0",
    "duckdb-async": "^1.2.0",
    "jwt-decode": "^4.0.0",
    "mock-aws-s3": "^4.0.2",
    "nock": "^14.0.1",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}